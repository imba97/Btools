{
	// 清单文件的版本，这个必须写，而且必须是2
	"manifest_version": 2,
	// 插件的名称
	"name": "Btools",
	// 插件的版本
	"version": "0.0.1",
	// 插件描述
	"description": "Btools B站小工具",
	// 图标，一般偷懒全部用一个尺寸的也没问题
	"icons":
	{
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"browser_action":
	{
		"default_icon": "img/icon.png",
		"default_title": "优化网页的小工具",
		"default_popup": "popup.html"
	},
	// 需要直接注入页面的JS
	"content_scripts":
	[
		{
			"matches": ["<all_urls>"],
			// 多个JS按顺序注入
			"js": ["js/jq.js"],
			// JS的注入可以随便一点，但是CSS的注意就要千万小心了，因为一不小心就可能影响全局样式
			// "css": ["css/custom.css"],
			// 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
			"run_at": "document_start"
		},
		// 这里仅仅是为了演示content-script可以配置多个规则
		{
			"matches": ["*://space.bilibili.com/*"],
			"js": ["js/Btools/viv.js"],
			"run_at": "document_end"
		}
	],
	// 权限申请
	"permissions":
	[
		"declarativeContent",
		"notifications",
		"storage",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"background":
	{
		"scripts": ["js/background.js"]
	},
	"homepage_url": "http://g.imba97.cn",
	"default_locale": "zh_CN"
}
